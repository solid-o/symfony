<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Solido\Symfony\EventListener\FormInvalidExceptionSubscriber" id="Solido\Symfony\EventListener\FormInvalidExceptionSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Solido\Symfony\EventListener\FormNotSubmittedExceptionSubscriber" id="Solido\Symfony\EventListener\FormNotSubmittedExceptionSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Solido\Symfony\EventListener\InvalidJSONExceptionSubscriber" id="Solido\Symfony\EventListener\InvalidJSONExceptionSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Solido\Symfony\EventListener\UnmergeablePatchExceptionSubscriber" id="Solido\Symfony\EventListener\UnmergeablePatchExceptionSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
