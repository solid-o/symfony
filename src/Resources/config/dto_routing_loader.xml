<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="solido.dto-management.proxy_cache_dir">%kernel.cache_dir%/dto-proxies</parameter>
    </parameters>

    <services>
        <service id="solido.dto-management.routing.loader" class="Solido\Symfony\DTO\Routing\AnnotationRoutingLoader">
            <tag name="routing.loader" />
            <argument type="service" id="Solido\DtoManagement\Finder\ServiceLocatorRegistryInterface" />
            <argument type="service" id="annotations.reader" on-invalid="ignore" />
        </service>
    </services>
</container>
