{
    "name": "solido/symfony",
    "description": "Symfony bundle/integration for solido suite",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Alessandro Chitolina",
            "email": "alekitto@gmail.com"
        },
        {
            "name": "Massimiliano Braglia",
            "email": "massimiliano.braglia@gmail.com"
        }
    ],
    "scripts": {
        "phpstan": "phpstan analyse src/ -c vendor/solido/php-coding-standards/phpstan.neon --level=9 --no-progress -vvv --memory-limit=2048M",
        "cscheck": "vendor/bin/phpcs --standard=Solido src/",
        "csfix": "vendor/bin/phpcbf --standard=Solido src/"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/framework-bundle": "^4.4 || ^5.0",
        "willdurand/negotiation": "^2.3 || ^3.0"
    },
    "require-dev": {
        "doctrine/annotations": "^1.10 || ^2.0",
        "giggsey/libphonenumber-for-php": "^8.10",
        "jms/serializer": "^3.6",
        "kcs/serializer": "^3.3 || ^4.0",
        "moneyphp/money": "^3.2",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.4",
        "refugis/doctrine-extra": "^2.0",
        "roave/security-advisories": "dev-master",
        "sensio/framework-extra-bundle": "^5.0 || ^6.0",
        "solido/atlante-php": "dev-master",
        "solido/body-converter": "^0.2@dev",
        "solido/common": "^0.2@dev",
        "solido/cors": "^0.2@dev",
        "solido/data-transformers": "^0.2@dev",
        "solido/dto-management": "^0.2@dev",
        "solido/pagination": "^0.2@dev",
        "solido/patch-manager": "^0.2@dev",
        "solido/php-coding-standards": "dev-master",
        "solido/query-language": "^0.2@dev",
        "solido/security-policy-checker": "^0.2@dev",
        "solido/serialization": "^0.2@dev",
        "solido/versioning": "^0.2@dev",
        "symfony/browser-kit": "^4.4 || ^5.0",
        "symfony/debug-bundle": "^4.4 || ^5.0",
        "symfony/expression-language": "^4.4 || ^5.0",
        "symfony/form": "^4.4 || ^5.0",
        "symfony/http-foundation": "^4.4 || ^5.0",
        "symfony/lock": "^4.4 || ^5.0",
        "symfony/security-bundle": "^4.4 || ^5.0",
        "symfony/serializer": "^4.4 || ^5.0",
        "symfony/var-dumper": "^4.4 || ^5.0",
        "symfony/web-profiler-bundle": "^4.4 || ^5.0",
        "symfony/yaml": "^4.4 || ^5.0"
    },
    "autoload": {
        "psr-4": {
            "Solido\\Symfony\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Solido\\Symfony\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "archive": {
        "exclude": [ ".gitignore", ".travis.yml", "tests" ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
